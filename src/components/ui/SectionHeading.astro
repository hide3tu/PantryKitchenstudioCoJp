---
interface Props {
  title: string;
  titleEn?: string;
  subtitle?: string;
  align?: "left" | "center";
  class?: string;
}

const {
  title,
  titleEn,
  subtitle,
  align = "left",
  class: className,
} = Astro.props;
---

<div
  class:list={[
    "mb-12",
    align === "center" && "text-center",
    className,
  ]}
>
  {
    titleEn && (
      <span class="font-display text-xs uppercase tracking-[0.2em] text-[var(--color-muted-foreground)] mb-2 block">
        {titleEn}
      </span>
    )
  }
  <h2 class="text-2xl md:text-3xl lg:text-4xl font-serif">{title}</h2>
  {
    subtitle && (
      <p class="mt-4 text-[var(--color-muted-foreground)] max-w-2xl">
        {subtitle}
      </p>
    )
  }
</div>
